programa {
  funcao inicio() { real n1, soma

   escreva("Qual sua nota do 1 bimestre?:")
   leia(n1)
   escreva("Qual sua nota do 2 bimestre?:")
   leia(soma)
   soma= soma+n1
   escreva("Qual sua nota do 3 bimestre?:")
   leia(n1)
   soma=soma+n1
   escreva("Qual sua nota do 4 bimestre?:")
   leia(n1)
   soma=soma+n1
