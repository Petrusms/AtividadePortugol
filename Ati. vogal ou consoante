programa
{
	inclua biblioteca Util
	
	funcao inicio()
	{
 
	 caracter l
	 
		escreva("Digite uma letra qualquer: ")
		leia(l)
		

	se(l == 'a' ou l == 'e' ou l == 'i' ou l == 'o' ou l == 'u'){
		escreva("È uma vogal minuscula")
	}
	senao se(l == 'A' ou l == 'E' ou l == 'I' ou l == 'O' ou l == 'U'){
	     escreva("È uma vogal maiscula")
	}
	senao se(l == 'b' ou l == 'c' ou l == 'd' ou l == 'f' ou l == 'g' ou l == 'h' ou l == 'j' ou l == 'k' ou l == 'l' ou l == 'm' ou l == 'n' ou l == 'p' ou l == 'q' ou l == 'r' ou l == 's' ou l == 't' ou l == 'v' ou l == 'w' ou l == 'x' ou l == 'y' ou l=='z'){
		escreva("È uma consoante minuscula")
	}
	senao{
		 escreva("È uma consoante maiscula")
	}
	}
}
