ou 
programa
{
	
	
	funcao inicio()
	{

	inteiro x,y
	escreva("Informe um número e um expoente: ")
	leia(x,y)
 	
        potencia(x,y)
 	   
 	   

      	     
	}
	funcao potencia( inteiro base, inteiro expo ){
		inteiro resul=base
		  para(inteiro i = 1; i<expo; i++){
        	resul = base*resul
        }
	     escreva(resul)
	    
	     	

	}
}
