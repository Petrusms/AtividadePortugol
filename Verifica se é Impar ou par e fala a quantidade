programa
{
	
	funcao inicio()
	{
	    inteiro p=0, i=0, vr
	    //para verificar mais troque o 5
	    para(inteiro s=0 ; s<5 ; s++){
	    	  escreva("Informe um nÃºmero: ")
	    	  leia(vr)
	    	  se(vr%2==0){
	    	  	p+=1
	    	  }
	    	  senao{
	    	  	i+=1
	    	  }
	    }
	    escreva("O total de pares foi de ",p," e de impares foi de ",i)
	}
}
