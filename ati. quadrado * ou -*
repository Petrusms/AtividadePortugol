programa
{
	
	funcao inicio()
	{
		inteiro quant_quad
		
          escreva("Qual a quantidade de * deseja de lado do quadrado?: ")
          leia(quant_quad)

		para(inteiro linha = 1; linha <=quant_quad; linha++){
			para(inteiro coluna=1; coluna<=quant_quad; coluna++){
				escreva("* ")
			}
			escreva("\n")
		}
	}
}

ou

programa
{
	
	funcao inicio()
	{
    inteiro quant_quad

	     escreva("Qual tamanho da quadrado?: ")
	     leia(quant_quad)
		para(inteiro linha = 1; linha <=quant_quad; linha++){
			para(inteiro t = quant_quad; t > linha; t--){

				escreva("- ")			
			}

		para(inteiro ult_li = 1; ult_li<=linha; ult_li++){
			escreva("* ")	
		}
		escreva("\n")
		}
	}
}
ou
programa
{
	
	funcao inicio()
	{

		inteiro n 

		escreva("Informe um valor: ")
		leia(n)
		
		para(inteiro i=1; i <= n; i++){

			para(inteiro j=1; j <= n; j++){
				se(i > j) {
					escreva("- ")
				}
				senao {
					escreva("* ")
				}
			}

			escreva("\n")
		}
	}
}
