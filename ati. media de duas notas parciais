programa {
	
  funcao inicio() {
   
    real n1, n2, media
 
    escreva("Informe a primeira nota: ")
    leia(n1)
    escreva("Informe a segunda nota: ")
    leia(n2)
 
   
    media = (n1 + n2) / 2
    escreva("A média obtida foi: ", media)
 
 
    se (media < 7.0) { 
      escreva("\nReprovado")
    }
    senao se (media >= 7.0) {
    	se (media==10.0){
        escreva("\nAprovado com Distinção")
      }
      senao{
        escreva("\nAprovado")
      }
      
    }      
  }
}
